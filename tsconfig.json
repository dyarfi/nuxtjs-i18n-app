{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~/components/*": ["./components/*"],
      "~/i18n": ["./i18n"]
    },
    "types": ["@nuxt/types", "@types/node", "@nuxtjs/i18n"]
  },
  "files": ["types/gql.d.ts", "types/vue-shim.d.ts"],
  "include": [
    "types/gql.d.ts",
    "types/vue-shim.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
